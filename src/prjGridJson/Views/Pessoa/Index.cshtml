@model  prjGridJson.Models.Pessoa
@{
    ViewBag.Title = "Consulta de Pessoas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <a class="btn btn-success pull-right btn-new" href="@Url.Content("~/Pessoa/Form")">Novo</a>
</div>
<div class="row">
    <table id="grid"></table>
    <div id="pager"></div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqGrid")
    @Scripts.Render("~/bundles/bootbox")
    <script src="@Url.Content("~/assets/js/pages/pessoa.index.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            app.pessoa_index.init({
                grid: {
                    id: '#grid',
                    pager: '#pager',
                    urlCarregaGrid: '@Url.Action("Search", "Pessoa")',
                    viewUrlBase: '@Url.Action("Edit", "Pessoa")',
                    urlDelete: '@Url.Action("Delete", "Pessoa")'
                }
            });
        });
    </script>
}


