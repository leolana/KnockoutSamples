@model prjGridJson.Models.Curso
@{
    ViewBag.Title = "Cadastro de Cursos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles{
    @Styles.Render("~/css/select2")
}

<div class="container">
    @using (@Html.BeginForm("Save", "Curso", FormMethod.Post, new { id = "form", role = "form" }))
    {
        @Html.ValidationSummary(excludePropertyErrors: false, message: "", htmlAttributes: new { @class = "da-form-row" })
        @Html.HiddenFor(model => model.CursoID)
        <div class="row">
            <div class="col-xs-6">
                <div class="form-group ">
                    @Html.LabelFor(model => model.CursoNome, "Nome do Curso")
                    @Html.TextBoxFor(model => model.CursoNome, new { @class = "form-control input-sm", placeholder = "Nome", maxlength = "50" })
                </div>
            </div>
            <div class="col-xs-6">
                <div class="form-group ">
                    @Html.LabelFor(model => model.DataConclusao, "Data de Conclusão")
                    @Html.TextBoxFor(model => model.DataConclusao, new { @class = "form-control input-sm", placeholder = "Data de Nascimento", maxlength = "50" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="form-group ">
                    @Html.LabelFor(model => model.PessoasIDs, "Aluno")
                    @Html.ListBoxFor(model => model.PessoasIDs, new MultiSelectList(Model.Pessoas, "PessoaId", "Nome"), new { @class = "form-control input-sm select2", @multiple = "multiple" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="form-actions">
                    <button id="btnSalvar" type="submit" class="btn btn-primary">Salvar</button>
			        <button id="btnCancelar" type="button" class="btn btn-default">Cancelar</button>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/select2")
    <script src="@Url.Content("~/assets/js/mask.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/assets/js/pages/curso.form.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            app.curso_form.init({
                elementos: {
                    form: "#form",
                    btnSalvar: "#btnSalvar",
                    btnCancelar: "#btnCancelar"
                },
                campos: {
                    id: "#CursoId",
                    nome: "#CursoNome",
                    dataConclusao: "#DataConclusao",
                    aluno: "#PessoaId",
                    select2Aluno: "#s2id_PessoaId"
                }
            });
        });
    </script>
}
