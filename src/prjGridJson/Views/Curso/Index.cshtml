@{
    ViewBag.Title = "Consulta de Cursos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Pesquisa</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-xs-12">
                <div class="form-group ">
                    @Html.Label("ID Pessoa")
                    @Html.TextBox("PessoaID", "", new { id = "PessoaID", @class = "form-control input-sm" })
                </div>
            </div>
        </div>
    </div>
    <div class="panel-footer">
        <button id="btnPesquisar" type="button" class="btn btn-primary">Salvar</button>
    </div>
</div>

<div class="row">
    <a class="btn btn-success pull-right btn-new" href="@Url.Content("~/Curso/Form")">Novo</a>
</div>
<div class="row">
    <table id="grid"></table>
    <div id="pager"></div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqGrid")
    @Scripts.Render("~/bundles/bootbox")
    @Scripts.Render("~/bundles/mask")
    <script src="@Url.Content("~/assets/js/pages/curso.index.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            app.curso_index.init({
                grid: {
                    id: '#grid',
                    pager: '#pager',
                    urlCarregaGrid: '@Url.Action("Search", "Curso")',
                    viewUrlBase: '@Url.Action("Edit", "Curso")',
                    urlDelete: '@Url.Action("Delete", "Curso")'
                },
                elementos: {
                    pessoaID: '#PessoaID',
                    btnPesquisar: '#btnPesquisar',
                    urlSearchPessoa: '@Url.Action("SearchPessoa", "Curso")'
                }
            });
        });
    </script>
}
