@{
    ViewBag.Title = "Search Student";
    ViewBag.Controller = "Student";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th></th>
            <th>Name</th>
            <th>Date of Birth</th>
            <th>Phoneh</th>
            <th>Address</th>
            <th>CEP</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: students">
        <tr>
            <td>
                <div class="btn-group">
                    <button type="button" class="btn btn-default" data-bind="click: $parent.editStudent"><span class="glyphicon glyphicon-pencil"></span></button>
                    <button type="button" class="btn btn-default" data-bind="click: $parent.removeStudent"><span class="glyphicon glyphicon-trash"></span></button>
                </div>
            </td>
            <td data-bind="text: StudentName"></td>
            <td data-bind="text: DateOfBirth"></td>
            <td data-bind="text: Phone"></td>
            <td data-bind="text: Address"></td>
            <td data-bind="text: CEP"></td>
        </tr>
    </tbody>
</table>

@section scripts {
    <script src="@Url.Content("~/Assets/js/Pages/student.index.js")" type="text/javascript"></script>
    <script>
        $(function () {
            app.student_index.init({
                grid: {
                    searchUrl: '@Url.Action("Search")',
                    editUrl: '@Url.Action("Edit")',
                    deleteUrl: '@Url.Action("Delete")'
                }
            });
        });
    </script>
}

