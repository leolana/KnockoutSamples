@{
    ViewBag.Title = "Search Course";
    ViewBag.Controller = "Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th></th>
            <th>Name</th>
            <th>Conclusion Date</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: courses">
        <tr>
            <td>
                <div class="btn-group">
                    <button type="button" class="btn btn-default" data-bind="click: $parent.editCourse"><span class="glyphicon glyphicon-pencil"></span></button>
                    <button type="button" class="btn btn-default" data-bind="click: $parent.removeCourse"><span class="glyphicon glyphicon-trash"></span></button>
                </div>
            </td>
            <td data-bind="text: CourseName"></td>
            <td data-bind="text: CompletionDate"></td>
        </tr>
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3">
                @Html.TextArea("Paste")
            </td>
        </tr>
    </tfoot>
</table>

@section scripts {
    <script src="@Url.Content("~/Assets/js/Pages/course.index.js")" type="text/javascript"></script>
    <script>
        $(function () {
            app.course_index.init({
                grid: {
                    searchUrl: '@Url.Action("Search")',
                    editUrl: '@Url.Action("Edit")',
                    deleteUrl: '@Url.Action("Delete")'
                }
            });
        });
    </script>
}
